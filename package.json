{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:filter": "dotenv -- sh -c 'turbo run dev --filter=$TURBO_SCOPE'",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "debug-env": "dotenv -- sh -c 'echo TURBO_SCOPE=$TURBO_SCOPE'"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18"
  }
}